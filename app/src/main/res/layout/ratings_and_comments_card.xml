<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    android:background="#F5F5DC"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#F5F5DC">

        <!-- User Info: Profile Picture, Name, ID, and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- User Icon -->
            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="8dp" />

            <!-- Username, User ID, and Date -->
            <TextView
                android:id="@+id/user_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark. @tonystark. 23 Sep 2024"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Review Text -->
        <TextView
            android:id="@+id/review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I tried this recipe and it’s delicious."
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <!-- Audio Playback Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/audio_play_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_play"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/audio_play_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to play audio"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Rating Display -->
        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0 ★"
            android:textColor="#707070"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>