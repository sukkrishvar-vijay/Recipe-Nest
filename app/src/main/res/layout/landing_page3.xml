<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/landingpage_img3"
        android:layout_width="399dp"
        android:layout_height="306dp"
        android:src="@drawable/landing_page_3" />

    <TextView
        android:id="@+id/communityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Community"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/communityDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Recipe Nest community and share your culinary creations."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:id="@+id/viewPagerDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_unselected"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_unselected"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_selected"
            android:layout_margin="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Get Started"
        android:paddingStart="75dp"
        android:paddingEnd="75dp"
        />

</LinearLayout>